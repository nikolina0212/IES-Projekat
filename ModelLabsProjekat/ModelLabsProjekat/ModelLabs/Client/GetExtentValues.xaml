        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="GetExtentValues" Height="603" Width="800" Background="BlanchedAlmond">
    <Grid>
        <Canvas Margin="0,0,0,-6">
            <Label Name="GetValuesLabel" Content="Get Extent Values"  FontSize="40" HorizontalAlignment="Left" FontFamily="Century Gothic" Canvas.Left="236" Canvas.Top="10" Width="343" VerticalAlignment="Top" />
            <Label Name="TypeLabel" Content="Izaberi tip : " FontSize="30" HorizontalAlignment="Center" FontFamily="Century Gothic" Canvas.Left="38" Canvas.Top="73" Width="193" VerticalAlignment="Top" />
