            <Button x:Name="GetExtentValuesButton" Content="GetExtentValues" HorizontalAlignment="Center" VerticalAlignment="Top" Width="156" Height="33" Background="LightPink" Click="GetValues_Click" Canvas.Left="480" Canvas.Top="508" RenderTransformOrigin="0.513,0.554"/>
        </Canvas>
    </Grid>
</Window>
